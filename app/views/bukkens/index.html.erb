<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th class="name">物件名</th>
      <th class="price">賃料</th>
      <th class="address">住所</th>
      <th class="year">築年数</th>
      <th class="note">備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bukkens.each do |bukken| %>
      <tr>
        <td class="name"><%= bukken.name %></td>
        <td class="price"><%= bukken.price %>円</td>
        <td class="address"><%= bukken.address %></td>
        <td class="year"><%= bukken.year %>年</td>
        <td class="note"><%= bukken.note %></td>
        <td class="edit"><%= link_to '詳細', bukken %></td>
        <td class="edit"><%= link_to '編集', edit_bukken_path(bukken) %></td>
        <td class="edit"><%= link_to '削除', bukken, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

